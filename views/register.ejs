    <div class="container">
        <div class="register-card">
            <h1 class="text-center">Create Account</h1>
            <form action="/register" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input type="text" name="name" class="form-control" placeholder="Enter your name" required>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Email Address</label>
                    <input type="email" name="email" class="form-control" placeholder="Enter your email" required>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" placeholder="Create a password" required>
                    <div class="form-text">Use 8 or more characters with a mix of letters, numbers & symbols</div>
                </div>
                
                <div class="mb-4">
                    <label class="form-label">Profile Picture</label>
                    <div class="file-upload">
                        <label class="file-upload-label">
                            <i class="fas fa-cloud-upload-alt me-2"></i>
                            <span id="file-name">Choose profile image</span>
                            <input type="file" name="file" class="file-upload-input" accept="image/*">
                        </label>
                    </div>
                </div>

                <div class="d-grid mt-4">
                    <button class="btn btn-primary">
                        <i class="fas fa-user-plus me-2"></i>Register
                    </button>
                </div>

                <div class="text-center mt-3">
                    Already have an account? <a href="/login" class="text-accent">Sign in</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Display selected file name
        document.querySelector('.file-upload-input').addEventListener('change', function() {
            const fileName = this.files[0] ? this.files[0].name : 'Choose profile image';
            document.getElementById('file-name').textContent = fileName;
        });
    </script>
