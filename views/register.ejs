    <style>
        :root {
            --primary: #4361ee;
            --dark: #0c0f1f;
            --light: #f8f9fa;
        }
        
        body {
            background: var(--dark);
            min-height: 100vh;
            color: var(--light);
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            flex-direction: column;
        }
        
        .navbar {
            background-color: rgba(12, 15, 31, 0.9);
            backdrop-filter: blur(10px);
        }
        
        .navbar-brand span {
            color: var(--primary);
            font-weight: 700;
        }
        
        .register-card {
            background: rgba(31, 34, 53, 0.8);
            border-radius: 12px;
            padding: 2.5rem;
            max-width: 500px;
            margin: 100px auto 0;
            border: 1px solid rgba(67, 97, 238, 0.3);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }
        
        .form-control {
            background: rgba(15, 18, 37, 0.7);
            border: 1px solid #2a2e4a;
            color: var(--light);
            padding: 12px;
            transition: all 0.3s;
        }
        
        .form-control:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.25rem rgba(67, 97, 238, 0.25);
        }
        
        .btn-primary {
            background: var(--primary);
            border: none;
            padding: 12px;
            font-weight: 500;
            transition: all 0.3s;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(67, 97, 238, 0.4);
        }
        
        .text-accent {
            color: var(--primary);
            transition: all 0.3s;
        }
        
        .text-accent:hover {
            color: #5a74f1;
            text-decoration: none;
        }
        
        h1 {
            font-weight: 700;
            margin-bottom: 1.5rem;
            color: var(--primary);
        }
        
        .file-upload {
            position: relative;
            overflow: hidden;
        }
        
        .file-upload-input {
            position: absolute;
            font-size: 100px;
            opacity: 0;
            right: 0;
            top: 0;
        }
        
        .file-upload-label {
            display: block;
            padding: 10px;
            background: rgba(15, 18, 37, 0.7);
            border: 1px dashed #2a2e4a;
            border-radius: 5px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .file-upload-label:hover {
            border-color: var(--primary);
            background: rgba(15, 18, 37, 0.9);
        }
    </style>
